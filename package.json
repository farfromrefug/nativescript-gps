{
    "name": "nativescript-gps",
    "version": "1.0.0",
    "description": "Track GPS location updates",
    "main": "src/gps.js",
    "typings": "src/gps.d.ts",
    "nativescript": {
        "platforms": {
            "android": "2.3.0",
            "ios": "2.3.0"
        }
    },
    "scripts": {
        "tsc": "cpy '**/*.d.ts' '../plugin' --parents --cwd=src && tsc -skipLibCheck -d ",
        "build": " cp README.md plugin/ && rm -f .tsbuildinfo && npm run tsc && npm run build.esm && node ./build.esm.js",
        "build.esm": "tsc -skipLibCheck --target es2015 --module esnext --removeComments --outDir build/esm",
        "demo.ios": "npm run preparedemo && cd demo && tns emulate ios",
        "demo.ios.device": "npm run preparedemo && cd demo && tns run ios",
        "demo.android": "npm run preparedemo && cd demo && tns run android",
        "preparedemo": "npm run build && cd demo && tns plugin remove nativescript-gps && tns plugin add .. && tns install",
        "setup": "npm i && cd demo && npm i && cd .. && npm run build && cd demo && tns plugin add .. && cd .."
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/farfromrefug/nativescript-gps.git"
    },
    "keywords": [
        "NativeScript",
        "JavaScript",
        "Android",
        "iOS"
    ],
    "author": {
        "name": "Martin Guillon",
        "email": "martin.guillon@akylas.fr"
    },
    "bugs": {
        "url": "https://github.com/farfromrefug/nativescript-gps/issues"
    },
    "license": "MIT",
    "homepage": "https://github.com/farfromrefug/nativescript-gps",
    "readmeFilename": "../README.md",
    "devDependencies": {
        "@nativescript/core": "6.5.1",
        "cpy-cli": "^3.1.1",
        "nativescript-observable": "^2.0.3",
        "nativescript-perms": "^2.0.7",
        "tns-platform-declarations": "6.5.1",
        "tslint": "^6.1.2",
        "tslint-config-prettier": "^1.18.0",
        "tslint-config-standard": "^9.0.0",
        "typescript": "~3.9.3",
        "prompt": "^1.0.0",
        "recursive-copy": "^2.0.10",
        "rimraf": "^3.0.2",
        "through2": "^3.0.1"
    }
}
